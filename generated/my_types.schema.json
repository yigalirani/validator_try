{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "User": {
            "properties": {
                "email": {
                    "type": "string"
                },
                "id": {
                    "type": "number"
                },
                "name": {
                    "type": "string"
                },
                "roles": {
                    "items": {
                        "enum": [
                            "admin",
                            "guest",
                            "user"
                        ],
                        "type": "string"
                    },
                    "type": "array"
                }
            },
            "type": "object"
        }
    }
}

